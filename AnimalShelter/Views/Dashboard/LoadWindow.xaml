<UserControl x:Class="AnimalShelter.Views.Dashboard.LoadWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AnimalShelter.Views.Dashboard"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="UserControl_Loaded">
    <Grid x:Name="gridContent">
        <ProgressBar Width="300" Style="{StaticResource MaterialDesignCircularProgressBar}" Height="300" Foreground="White" BorderBrush="#FFE4E4E4" IsIndeterminate="True"></ProgressBar> 
    </Grid>
</UserControl>
